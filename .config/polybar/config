[module/date]
type = internal/date
interval = 0.5

date =
date-alt = "%d/%m/%Y"

time = "%a %b %d, %H:%M:%S "

time-alt = %H:%M

format-prefix-foreground = ${colors.my_foreground}
format-underline =

label = %date% %time%

[module/cpu]
type = internal/cpu

format-prefix = 
label = " %percentage%%"

interval = 0.5

[module/memory]
type = internal/memory

format = <label>
format-prefix = 
label = " %gb_used%"

interval = 0.5

[module/temperature]
type = internal/temperature
format = <label>
format-prefix = 
