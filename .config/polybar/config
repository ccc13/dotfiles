module-margin-right = 2

;separator = %{#RRGGBB}|%{F-}
separator = |

font-0 = Hack Nerd Font:pixelsize=16;1
font-1 = Hack:fontformat=truetype:size=16;1
font-2 = FontAwesome:fontformat=truetype:size=13;1


modules-left = i3
modules-right = temperature cpu memory wired-network date

tray-position = right
tray-padding = 9
pseudo-transparency = false
